library(dplyr)
library(data.table)

n <- 100
reps <- rep(NA, n)
for (i in 1:n){reps[i] <- paste0("F", i)}
print(reps)
h2 <- "true-0.8"
#envs <- c("env-0.0", "env-0.01", "env-0.02", "env-0.03", "env-0.04", "env-0.05", "env-0.06", "env-0.07", "env-0.08", "env-0.09", "env-0.1")
envs <- c('env-0.0')
cases <- c("C1", "C2")
dat <- expand.grid(reps, cases, h2, envs)
colnames(dat) <- c("rep", "case", "h2", "env")

agg_all_data <- function(rep, dir_path, case, h2, env) {
  
  nc <- fread(paste0(dir_path, rep,"/", case, "/", h2, "/", env, "/", "genos-gwas_common.nc.betas"))
  nc$type <- "nc"

  c <- fread(paste0(dir_path, rep,"/", case, "/", h2, "/", env, "/", "genos-gwas_common.c.betas"))
  c$type <- "c"

  nc_Tm <- fread(paste0(dir_path, rep,"/", case, "/", h2, "/", env, "/", "genos-gwas_common-Tm.nc.betas"))
  nc_Tm$type <- "nc-Tm"

  c_Tm <- fread(paste0(dir_path, rep,"/", case, "/", h2, "/", env, "/", "genos-gwas_common-Tm.c.betas"))
  c_Tm$type <- "c-Tm"
 
  true <- fread(paste0('../../output/Simulate_Phenotypes/4PopSplit/', case, "/", h2, "/", "genos-gwas_common.effects.txt"))
  colnames(true) <- c("ID", "A1", "BETA_Strat")
  true$type <- "true"
 
  df <- bind_rows(nc, c, nc_Tm, c_Tm, true)
  return(df)
}
df <- plyr::mdply(dat, agg_all_data, dir_path = '../../output/PRS/4PopSplit/' )

fwrite(df, "4PopSplit_true_betas.txt", row.names=F,quote=F,sep="\t", col.names = T)